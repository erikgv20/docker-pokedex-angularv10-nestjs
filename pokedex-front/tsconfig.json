{
  "compileOnSave": false,
  "compilerOptions": {
    "module": "es2020",
    "baseUrl": "./src",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "target": "es2015",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom",
      "ES2017.object"
    ],
    "paths": {
      "@services/*": ["app/services/"],
      "@models/*": ["app/models/"],
      //"@interceptors/*": ["app/interceptors/"]
    }
  }
}
